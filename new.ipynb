   "source": [
    "import sounddevice as sd\n",
    "import soundfile as sf\n",
    "\n",
    "fs = 16000\n",
    "seconds = 6\n",
    "\n",
    "print(\"Speak now...\")\n",
    "audio = sd.rec(int(seconds * fs), samplerate=fs, channels=1)\n",
    "sd.wait()\n",
    "\n",
    "sf.write(\"input.wav\", audio, fs)\n",
    "print(\"Audio recorded and saved as input.wav\")"
   ]
  }
 ],
